# Maintainer: Adam Thiede <adamj@mailbox.org>
pkgname=battery-limit
pkgver=0.1
pkgrel=1
pkgdesc="script and service to limit battery charge"
url="https://gitlab.com/elagost/battery-limit"
arch=("any")
license=("GPL")
depends=("systemd")
source=("${url}/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")

package() {
    install -Dm755 ${srcdir}/${pkgname}-${pkgver}/battery-limit.sh ${pkgdir}/usr/bin/battery-limit.sh
    install -Dm755 ${srcdir}/${pkgname}-${pkgver}/battery-limit.service ${pkgdir}/usr/lib/systemd/system/battery-limit.service
}

sha512sums=(
    "a089b1e8a033c40a82d61b2fac008c2d2547ed8e65523709e5cba142ae3c0d86dc8eb3dce8d019fdd9c85e4dde3f83effcbe5474c08d9439b8b95ed0ea73a0f7"
)
